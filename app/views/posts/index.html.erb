<div class="min-h-screen flex flex-col items-center justify-center sm:py-12">

  <!-- Header -->
  <h1 class="text-4xl font-extrabold text-center text-white my-8">
    My Posts
  </h1>

  <!-- New Post Button -->

  <div class="flex justify-end p-10 w-full">
    <% if current_user&.admin? %>
      <%= link_to "NEW POST", new_post_path, class: "px-6 py-3 bg-blue-500 text-white rounded-full hover:bg-blue-700 transition duration-300 shadow-md" %>
    <% end %>
  </div>

  <div class="p-3 w-2/3 font-sans">

    <!-- Notice -->
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
        <span class="block sm:inline"><%= notice %></span>
      </div>
    <% end %>

    <div class="grid grid-flow-row auto-rows-max">
      <% @posts.each do |post| %>
        <%= link_to post do %>
          <div class="p-6 py-10 bg-white rounded-lg shadow-md my-2 cursor-pointer">
            <h2 class="font-bold text-xl mb-2">
              <%= post.title %>
            </h2>
            <p class="text-black text-base">
              <%= post.created_at %>
            </p>
            <p class="mt-2 text-black text-sm leading-relaxed">
              <%= post.content %>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
  
  <%= paginate @posts %>
  
</div>
