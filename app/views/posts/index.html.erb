<div class="min-h-screen flex flex-col sm:py-12">

  <!-- Header -->
  <h1 class="flex text-3xl font-bold m-6 justify-center underline">
    my posts
  </h1>

  <!-- New Post Button -->
  <div class="flex justify-end p-10">
    <%= link_to "New post", new_post_path, class: "btn" %>
  </div>

  <div class="p-3 sm:max-w-xl sm:mx-auto font-sans">

      <!-- Notice -->
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
          <span class="block sm:inline"><%= notice %></span>
        </div>
      <% end %>

      <!-- Posts List -->
      <div class="flex flex-wrap">
        <% @posts.each do |post| %>
          <div id="posts" class="m-6 p-6 bg-gray-600 rounded-xl w-full">  <!-- Updated this line -->
            <p><%= post.title %></p>
            <p><%= post.created_at %></p>
            <p class="mb-4">
              <%= link_to "Show this post", post, class: "text-blue-500 hover:underline" %>
            </p>
          </div>
        <% end %>
      </div>

  </div>
</div>
